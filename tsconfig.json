{
  "files": ["src/main.ts"],
  "compilerOptions": {
    "strict": true,
    "module": "ES6",
    "allowJs": false,
    "target": "ES5",
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types.d.ts"],
    "moduleResolution": "node"
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*"]
}
